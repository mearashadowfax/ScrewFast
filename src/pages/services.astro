---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Import necessary images
import blueprints from "@images/blueprints-image.avif";
import personWorking from "@images/person-working.avif";
import beforeAfter from "@images/before-after.avif";
import constructionWorkers from "@images/construction-workers.avif";
import aerialView from "@images/aerial-view.avif";
import usingTools from "@images/using-tools.avif";
import progressBuilding from "@images/progress-building.avif";
import underConstruction from "@images/under-construction.avif";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Cung cấp tư vấn chuyên gia",
    subTitle:
      "Bắt đầu một dự án xây dựng có thể khiến bạn choáng ngợp. Với dịch vụ tư vấn chuyên nghiệp của chúng tôi, chúng tôi đồng hành cùng bạn ở mọi giai đoạn, đảm bảo bạn đưa ra những quyết định đúng đắn. Dù bạn là người yêu thích tự làm (DIY) hay nhà thầu chuyên nghiệp, các chuyên gia của chúng tôi luôn sẵn sàng cung cấp tư vấn phù hợp về lựa chọn sản phẩm, quy mô dự án và tuân thủ các quy định địa phương.",
    single: false,
    imgOne: blueprints,
    imgOneAlt: "Bản vẽ xây dựng và máy tính bảng hiển thị kế hoạch thi công.",
    imgTwo: personWorking,
    imgTwoAlt: "Người đang làm việc tại văn phòng",
  },
  {
    isRightSection: false,
    title: "Biến ý tưởng thiết kế thành hiện thực",
    subTitle:
      "Những người thợ lành nghề của chúng tôi mang đến độ chính xác và sự xuất sắc cho từng dự án xây dựng. Từ các hạng mục lắp đặt nhỏ đến các công trình kết cấu quy mô lớn, ScrewFast cung cấp dịch vụ xây dựng đáng tin cậy để hiện thực hóa kế hoạch của bạn. Chúng tôi đảm bảo các tiêu chuẩn cao nhất về an toàn và tay nghề, sử dụng công cụ và vật liệu chất lượng cao từ kho hàng phong phú của mình.",
    img: beforeAfter,
    imgAlt: "Công trình xây dựng trước và sau khi hoàn thiện",
    btnExists: true,
    btnTitle: "Tìm hiểu thêm",
    btnURL: "#",
  },
  {
    isRightSection: true,
    title: "Điều phối dự án với sự giám sát chuyên nghiệp",
    subTitle:
      "Quản lý dự án hiệu quả là yếu tố cốt lõi của mọi công trình thành công. ScrewFast cung cấp dịch vụ lập kế hoạch chi tiết và quản lý vững chắc để giữ dự án đúng tiến độ và trong ngân sách. Hãy để chúng tôi xử lý sự phức tạp của việc điều phối quy trình, phân bổ nguồn lực và giao tiếp với các bên liên quan, trong khi bạn tập trung vào tầm nhìn của mình.",
    single: false,
    imgOne: constructionWorkers,
    imgOneAlt: "Công nhân xây dựng đang điều phối một dự án",
    imgTwo: aerialView,
    imgTwoAlt: "Góc nhìn từ trên cao của công trình đang được quản lý",
  },
  {
    isRightSection: false,
    title: "Đảm bảo hiệu suất bền vững lâu dài",
    subTitle:
      "Cam kết của chúng tôi với dự án của bạn không kết thúc khi công trình hoàn thành. ScrewFast cung cấp dịch vụ bảo trì và hỗ trợ liên tục nhằm đảm bảo độ bền và hiệu suất lâu dài của công trình. Từ các đợt kiểm tra định kỳ đến hỗ trợ khẩn cấp, đội ngũ phản hồi nhanh của chúng tôi luôn sẵn sàng hỗ trợ bạn một cách liền mạch.",
    img: usingTools,
    imgAlt:
      "Người đàn ông mặc áo phản quang cam đen, đội mũ bảo hộ trắng và cầm công cụ điện màu vàng đen",
  },
  {
    isRightSection: true,
    title: "Xây dựng chiến lược tùy chỉnh cho những thách thức riêng biệt",
    subTitle:
      "Đối với các khách hàng doanh nghiệp quy mô lớn, ScrewFast cung cấp các giải pháp được thiết kế riêng để giải quyết những thách thức đặc thù của ngành. Bằng cách thấu hiểu nhu cầu riêng của bạn, chúng tôi xây dựng các chiến lược tùy chỉnh nhằm tối ưu hóa vận hành, nâng cao hiệu quả và thúc đẩy doanh nghiệp của bạn phát triển.",
    single: false,
    imgOne: progressBuilding,
    imgOneAlt: "Kết cấu tòa nhà đang trong quá trình xây dựng",
    imgTwo: underConstruction,
    imgTwoAlt: "Tòa nhà màu nâu và xám đang thi công",
    btnExists: true,
    btnTitle: "Đọc thêm",
    btnURL: "#",
  },
];
---

<MainLayout
  title="Dịch vụ | ScrewFast"
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://screwfast.uk/services",
    url: "https://screwfast.uk/services",
    name: "Dịch vụ Tư vấn Chuyên gia | ScrewFast",
    description:
      "Kết hợp chuyên môn với tầm nhìn của bạn, ScrewFast cung cấp dịch vụ vượt trội và các giải pháp toàn diện trong lĩnh vực phần cứng và xây dựng, từ tư vấn đến hoàn thiện dự án.",
    isPartOf: {
      "@type": "WebSite",
      url: "https://screwfast.uk",
      name: "ScrewFast",
      description:
        "ScrewFast cung cấp các công cụ phần cứng hàng đầu và dịch vụ xây dựng chuyên nghiệp để đáp ứng mọi nhu cầu dự án của bạn.",
    },
    inLanguage: "vn",
  }}
>
  {/* MainSection is the introductory section of the page, it also contains a CTA button */}
  <MainSection
    title="Kết hợp chuyên môn với tầm nhìn của bạn"
    subTitle="Tại ScrewFast, chúng tôi tự hào cung cấp các giải pháp toàn diện và dịch vụ xuất sắc trong ngành phần cứng và xây dựng. Đội ngũ giàu kinh nghiệm của chúng tôi luôn đồng hành cùng dự án của bạn từ khâu ý tưởng đến khi hoàn thành thông qua nhiều dịch vụ chuyên biệt."
    btnExists={true}
    btnTitle="Đặt lịch tư vấn"
    btnURL="#"
  />

  {
    articles.map((article) => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }

  <FeaturesStats
    title="Qua các con số"
    subTitle="Cam kết của chúng tôi về chất lượng và độ tin cậy được thể hiện rõ trong mọi dự án mà chúng tôi thực hiện. Tại ScrewFast, chúng tôi nỗ lực cung cấp các dịch vụ hàng đầu trong ngành, đảm bảo các công trình của bạn được xây dựng để bền vững theo thời gian."
    mainStatTitle="96%"
    mainStatSubTitle="khách hàng đánh giá trải nghiệm với ScrewFast là xuất sắc"
    stats={[
      {
        stat: "99,8%",
        description: "tỷ lệ hoàn thành dự án",
      },
      {
        stat: "5.000+",
        description: "lắp đặt thành công",
      },
      {
        stat: "85%",
        description: "tăng trưởng khách hàng theo năm",
      },
    ]}
  />
</MainLayout>
