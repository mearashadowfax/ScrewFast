---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";
import ClientsSection from "@components/sections/landing/ClientsSection.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import FeaturesNavs from "@components/sections/features/FeaturesNavs.astro";
import TestimonialsSection from "@components/sections/testimonials/TestimonialsSection.astro";
import PricingSection from "@components/sections/pricing/PricingSection.astro";
import FAQ from "@components/sections/misc/FAQ.astro";
import AnnouncementBanner from "@components/ui/banners/AnnouncementBanner.astro";
import heroImage from "@images/hero-image.avif";
import faqs from "@data/faqs.json";
import features from "@data/features.json";
import pricing from "@data/pricing.json";
import featureImage from "@images/features-image.avif";
import construction from "@images/construction-image.avif";
import tools from "@images/automated-tools.avif";
import dashboard from "@images/dashboard-image.avif";
import { partnersData } from "@/data_files/constants";

const avatarSrcs: Array<string> = [
  "https://images.unsplash.com/photo-1568602471122-7832951cc4c5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1531927557220-a9e23c1e4794?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1541101767792-f9b2b1c4f127?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&&auto=format&fit=facearea&facepad=3&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1492562080023-ab3db95bfbce?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
];
---

<MainLayout>


  <HeroSection
    title=`Trang bị cho dự án của bạn với <span class="text-yellow-500 dark:text-yellow-400">ScrewFast</span>`
    subTitle="Công cụ phần cứng chất lượng cao và dịch vụ xây dựng chuyên nghiệp cho mọi nhu cầu dự án."
    primaryBtn="Bắt đầu khám phá"
    primaryBtnURL="/products"
    secondaryBtn="Liên hệ đội ngũ kinh doanh"
    secondaryBtnURL="/contact"
    withReview={true}
    avatars={avatarSrcs}
    rating=`<span class="font-bold">4.8</span> / 5`
    starCount={4}
    reviews=`Dựa trên hơn <span class="font-bold">12,8k</span> đánh giá`
    src={heroImage}
    alt="Chồng hộp sản phẩm ScrewFast chứa các công cụ phần cứng đa dạng"
  />

  <ClientsSection
    title="Được các nhà lãnh đạo ngành tin tưởng"
    subTitle="Khám phá độ tin cậy được lựa chọn bởi các ông lớn trong ngành."
    partners={partnersData}
  />

  <FeaturesGeneral
    title="Đáp ứng các yêu cầu của ngành"
    subTitle="Tại ScrewFast, chúng tôi giải quyết những thách thức đặc thù trong lĩnh vực phần cứng và xây dựng. Từ các công cụ tiên tiến đến dịch vụ chuyên gia, chúng tôi cam kết giúp bạn vượt qua trở ngại và đạt được mục tiêu."
    src={featureImage}
    alt="Sản phẩm ScrewFast trong các hộp nổi"
    features={features}
  />

  <FeaturesNavs
    title=`Tùy chỉnh các giải pháp của <span class="text-yellow-500 dark:text-yellow-400">ScrewFast</span> để phù hợp hoàn hảo với nhu cầu phần cứng và xây dựng của bạn.`
    tabs={[
      {
        heading: "Công cụ tiên tiến",
        content:
          "Tối ưu hóa dự án của bạn với các công cụ hiện đại của ScrewFast. Trải nghiệm hiệu quả vượt trội trong quản lý xây dựng với các giải pháp tự động hóa tinh vi của chúng tôi.",
        svg: "tools",
        src: tools,
        alt: "Thiết bị hạng nặng màu vàng và đen trên bãi cỏ nâu",
        first: true,
      },
      {
        heading: "Bảng điều khiển trực quan",
        content:
          "Điều hướng dễ dàng với các bảng điều khiển trực quan của ScrewFast. Thiết lập và giám sát dự án một cách liền mạch với giao diện thân thiện, được thiết kế cho việc quản lý quy trình nhanh chóng và hiệu quả.",
        svg: "dashboard",
        src: dashboard,
        alt: "Ảnh chụp màn hình hoặc minh họa bảng điều khiển trực quan",
        second: true,
      },
      {
        heading: "Tính năng mạnh mẽ",
        content:
          "Giảm thiểu độ phức tạp, tối đa hóa năng suất. Các tính năng mạnh mẽ của ScrewFast được thiết kế để tinh giản quy trình xây dựng của bạn, mang lại kết quả vượt trội và khác biệt.",
        svg: "house",
        src: construction,
        alt: "Khung kim loại màu xám của một tòa nhà gần cần cẩu tháp vào ban ngày",
      },
    ]}
  />

  <TestimonialsSection
    title="Tăng tốc dự án của bạn"
    subTitle="Tại ScrewFast, chúng tôi đảm bảo khởi đầu nhanh chóng với việc thiết lập tài khoản tức thì. Trải nghiệm tốc độ xây dựng được tái định nghĩa."
    testimonials={[
      {
        content:
          "ScrewFast đã nâng cao đáng kể hiệu quả dự án của chúng tôi. Việc thiết lập diễn ra ngay lập tức và thời gian phản hồi nhanh chóng của họ thực sự ấn tượng. Một bước ngoặt thực sự trong hỗ trợ phần cứng và xây dựng!",
        author: "Samantha Ruiz",
        role: "Giám đốc vận hành | ConstructIt Inc.",
        avatarSrc:
          "https://images.unsplash.com/photo-1593104547489-5cfb3839a3b5?q=80&w=1453&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D8&auto=format&fit=facearea&facepad=2&w=320&h=320&q=80",
      },
    ]}
    statistics={[
      {
        count: "70k+",
        description:
          "khách hàng được trang bị — từ người tự làm đến các doanh nghiệp xây dựng lớn",
      },
      {
        count: "35%",
        description:
          "gia tăng hiệu quả dự án nhờ các công cụ và dịch vụ của ScrewFast",
      },
      {
        count: "15,3%",
        description:
          "giảm chi phí bảo trì được báo cáo bởi các khách hàng dài hạn",
      },
      {
        count: "2x",
        description:
          "lắp ráp nhanh hơn nhờ các giải pháp cố định sáng tạo",
      },
    ]}
  />

  <PricingSection pricing={pricing} />

  <FAQ title="Câu hỏi<br />thường gặp" faqs={faqs} />

  <HeroSectionAlt
    title="Hãy cùng nhau xây dựng"
    subTitle="ScrewFast là một mẫu mã nguồn mở, được thiết kế tỉ mỉ với các framework Astro, Tailwind CSS và Preline UI."
    url="https://github.com/mearashadowfax/ScrewFast"
  />
</MainLayout>
